<Page x:Class="Balashova_PR8_Sport_.MainPage.Basket"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Balashova_PR8_Sport_.MainPage"
      mc:Ignorable="d" 
      d:DesignHeight="683" d:DesignWidth="1500"
      Title="Basket">
    <Grid Background="White">
        <Canvas>
            <Label Content="КОРЗИНА" Style="{StaticResource Label1}"/>
            <Button x:Name="Exit" Style="{StaticResource Back}" Width="100" 
                 Height="100" Click="Exit_Click">
                <Image Source="/Image/Back.png"/>
            </Button>
            <TextBlock Text="В вашей корзине ничего нет" FontFamily="Comic Sans MS" 
                    FontSize="38" Canvas.Left="530" Canvas.Top="300"/>
        </Canvas>
    </Grid>
</Page>
